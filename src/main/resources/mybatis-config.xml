<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<properties resource="/db.properties"/>
	<settings>
		<setting name="jdbcTypeForNull" value="NULL"></setting>
	</settings>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="${driver}"/>
				<property name="url" value="${url}"/>
				<property name="username" value="${user}"/>
				<property name="password" value="${password}"/>
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="domain/manager/service/manager-map.xml" />
		<mapper resource="domain/restaurant/service/restaurant-map.xml" />
		<mapper resource="domain/review/service/review-mapper.xml" />
		<mapper resource="domain/reservation/service/reservation-mapper.xml" />
		<mapper resource="domain/member/service/member-map.xml" />
		<mapper resource="domain/menu/service/menu-map.xml" />
	</mappers>
</configuration>